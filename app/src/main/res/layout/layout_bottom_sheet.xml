<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="?attr/colorSurface"
    android:elevation="8dp"
    android:id="@+id/bottom_sheet"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:behavior_fitToContents="true"
    app:behavior_halfExpandedRatio="0.5"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:cardCornerRadius="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:id="@+id/ll_description_container"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">
        <LinearLayout
            android:id="@+id/ll_description_left_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/description_whom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By user4567"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_place_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대전 성심당"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_place_meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="중구 은행동 10:00~22:00"
                android:textSize="12sp"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp" />

            <!-- 맛집 사진 미리보기. 좌우 스크롤 view -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:overScrollMode="never"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_description_right_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_portion_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/join_button"
                android:text="Join"
                />

            <!-- item_joined_person을 item으로 가짐 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_people"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>